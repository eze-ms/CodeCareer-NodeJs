<main>
    <form action="/vacantes/nueva" method="POST" class="default-form form_nueva_vancante">
        <div class="content-info">
            <div class="box_info_vacante">
                <h3>Información General</h3>
                <div class="campo">
                    <label>Título</label>
                    <input type="text" name="titulo" placeholder="Ejemplo: Full Stack Developer">
                </div>

                <div class="campo">
                    <label>Empresa</label>
                    <input type="text" name="empresa" placeholder="Empresa Contratante">
                </div>

                <div class="campo">
                    <label>Ubicación</label>
                    <input type="text" name="ubicacion" placeholder="Ejemplo: Madrid, Barcelona o Remoto">
                </div>

                <div class="campo">
                    <label>Categoría</label>
                    <select name="categoria">
                        <option value="" disabled selected>- Selecciona -</option>
                        <option value="Frontend">Frontend Developer</option>
                        <option value="Backend">Backend Developer</option>
                        <option value="FullStack">FullStack Developer</option>
                        <option value="ProductDesign">Product Designer</option>
                        <option value="DevOps">DevOps Developer</option>
                        <option value="Cloud">Cloud Developer</option>
                        <option value="Mobile">Mobile Developer</option>
                        <option value="BigData">Big Data Engineer</option>
                        <option value="DataScience">Data Scientist</option>
                        <option value="IoT">IoT Developer</option>
                        <option value="Microsoft">Microsoft Developer</option>
                    </select>
                </div>

                <div class="campo">
                    <label>Salario (EU)</label>
                    <input type="text" name="salario" placeholder="Ejemplo: 60,000€ - 80,000€ anuales">
                </div>

                <div class="campo">
                    <label>Experiencia</label>
                    <input type="text" name="experiencia" placeholder="Ejemplo: 4-6 años">
                </div>

                <div class="campo">
                    <label>Contrato</label>
                    <select name="contrato">
                        <option value="" disabled selected>- Selecciona -</option>
                        <option value="Full Time">Full Time</option>
                        <option value="Part Time">Part Time</option>
                        <option value="Por Proyecto">Por Proyecto</option>
                        <option value="Freelance">Freelance</option>
                        <option value="Temporal">Contrato Temporal</option>
                        <option value="Practicas">Contrato de Prácticas</option>
                    </select>
                </div>

                <div class="campo">
                    <label>Nivel</label>
                    <select name="nivel">
                        <option value="" disabled selected>- Selecciona -</option>
                        <option value="Intern">Intern</option>
                        <option value="Junior">Junior</option>
                        <option value="Mid-Level">Mid-Level</option>
                        <option value="Senior">Senior</option>
                        <option value="Lead">Lead</option>
                        <option value="Manager">Manager</option>
                        <option value="Director">Director</option>
                    </select>
                </div>
            </div>

            <div class="campo">
                <h3>Descripción del Puesto</h3>
                <div class="campo descripcion">
                    <input type="hidden" id="x" name="descripcion">
                    <trix-editor input="x"></trix-editor>
                </div>
            </div>

            <div class="campo_campo">
                <h3>Conocimientos</h3>
                <ul class="lista-conocimientos">
                    {{#seleccionarSkills skills}}
                    {{/seleccionarSkills}}
                </ul>
            </div>

            <div class="campo centrar-horizontal">
                <button type="button" id="show-more-btn" class="btn btn-azul">Ver más</button>
                <input type="hidden" name="skills" id="skills">
                <input type="submit" value="Publicar" class="btn btn-azul">
            </div>
    </form>
</main>
