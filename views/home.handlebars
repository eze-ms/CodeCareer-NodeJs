<main class="main_lista-vacantes">
  <form action="/vacantes/filtrar" method="post" class="content_categorias" id="form-filtro">
      <label for="categorias" class="label_categorias">Categor√≠as</label>
      <select id="categorias" class="select_categorias" name="categoria" onchange="document.getElementById('form-filtro').submit();">
          <option value="Todas" {{#if (eq categoriaSeleccionada "Todas")}}selected{{/if}}>Todas</option>
          {{#each categorias}} 
              <option value="{{this}}" {{#if (eq ../categoriaSeleccionada this)}}selected{{/if}}>{{this}}</option>
          {{/each}}
      </select>
  </form>

  
  <h2 class="lista-vacantes">Lista de Vacantes</h2>
  {{#if vacantes.length}}
    <div class="grid-vacantes">
      {{#each vacantes}}
        <div class="vacante">
          <div>
            <div class="caja" style="background-color: {{obtenerColor categoria}}">
              <h3>{{empresa}}</h3>
              <p class="puesto">{{titulo}}</p>
              <p class="categoria_vacante">{{categoria}}</p>
              <p class="nombre contrato">{{contrato}}</p>
              <ul class="skills">
                {{#each (limit skills 5)}}
                  <li class="nombre_skill">{{this}}</li>
                {{/each}}
              </ul>
            </div>
          </div>
          <div>
            <div class="caja_info">
              <div class="box_info">
                <p class="nombre salario">{{salario}}</p>
                <p class="nombre ubicacion">{{ubicacion}}</p>
              </div>
              <div class="centrar-vertical">
                <a href="/vacantes/{{url}}" class="btn btn-detalles">Detalles</a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p>No hay ofertas en este momento</p>
  {{/if}}
</main>
